    <%= form.text_field :customer_phone %>
  </div>

  <div class="field">
    <strong>Customer Street Address: </strong>
    <%= form.text_field :customer_address %>
  </div>

  <div class="field">
    <strong>Customer City: </strong>
    <%= form.text_field :customer_city %>
  </div>

  <div class="field">
    <strong>Customer State: </strong>
    <%= form.text_field :customer_state %>
  </div>

  <div class="field">
    <strong>Customer Zip Code: </strong>
    <%= form.text_field :customer_zip %>
